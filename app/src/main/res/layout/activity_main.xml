    <Button
        android:id="@+id/teamARunButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/teamASixButton"
        android:layout_marginTop="16dp"
        android:text="Team A +1" />

    <Button
        android:id="@+id/teamAWicketButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/teamASixButton"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/teamARunButton"
        android:text="Team A Wicket" />

    <Button
        android:id="@+id/teamAFourButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
