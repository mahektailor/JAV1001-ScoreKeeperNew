        android:layout_marginStart="41dp"
        android:layout_marginTop="117dp"
        android:layout_toEndOf="@id/teamASixButton"
        android:text="Team A +4" />

    <Button
        android:id="@+id/teamASixButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/oversTextView"
        android:layout_marginTop="117dp"
        android:text="Team A +6" />

    <TextView
        android:id="@+id/teamBScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/teamAScore"
        android:layout_marginTop="16dp"
        android:text="Team B: 0"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/teamAScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team A: 0"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/oversTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/teamBScore"
        android:layout_marginTop="19dp"
        android:text="Overs: 0"
        android:textSize="18sp" />

    <!-- Button to increment Team A wickets -->

    <!-- Button to increment Team B score by 6 -->

    <!-- Button to increment Team B score by 4 -->

    <!-- Button to increment Team B score by 1 -->

    <!-- Button to increment Team B wickets -->

    <Button
        android:id="@+id/teamBFourButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/teamARunButton"
        android:layout_marginStart="0dp"
        android:layout_marginTop="158dp"
        android:layout_toEndOf="@id/teamBSixButton"
        android:text="Team B +4" />

    <Button
        android:id="@+id/teamBSixButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/teamARunButton"
        android:layout_marginTop="158dp"
        android:text="Team B +6" />

    <Button
        android:id="@+id/teamBRunButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/teamBSixButton"
        android:layout_marginTop="16dp"
        android:text="Team B +1" />

    <Button
        android:id="@+id/teamBWicketButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/teamBSixButton"
        android:layout_marginStart="0dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/teamBRunButton"
        android:text="Team B Wicket" />

</RelativeLayout>
